{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "initial-pc": { "$ref": "#/$defs/u32" },
    "initial-gas": {
      "$ref": "#/$defs/i64"
    },
    "program": {
      "type": "array",
      "items": { "$ref": "#/$defs/u8" }
    },
    "block-gas-costs": {
      "type": "array",
      "items": { "$ref": "#/$defs/block-gas-cost" }
    },
    "steps": {
      "type": "array",
      "items": { "$ref": "#/$defs/step" }
    }
  },
  "required": ["name", "initial-pc", "initial-gas", "program", "steps", "block-gas-costs"],
  "additionalProperties": false,
  "$defs": {
    "u8": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    },
    "u32": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295
    },
    "u64": {
      "type": "integer",
      "minimum": 0,
      "maximum": 18446744073709551615
    },
    "i64": {
      "type": "integer",
      "minimum": -9223372036854775808,
      "maximum": 9223372036854775807
    },
    "reg": {
      "type": "integer",
      "minimum": 0,
      "maximum": 12
    },
    "memory-chunk": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "address": { "$ref": "#/$defs/u32" },
          "contents": {
            "type": "array",
            "items": { "$ref": "#/$defs/u8" }
          }
        },
        "required": ["address", "contents"],
        "additionalProperties": false
      }
    },
    "block-gas-cost": {
      "type": "object",
      "properties": {
        "pc": { "$ref": "#/$defs/u32" },
        "cost": { "$ref": "#/$defs/u32" }
      },
      "required": ["pc", "cost"],
      "additionalProperties": false
    },
    "step": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "run": {
              "type": "object",
              "properties": {},
              "required": [],
              "additionalProperties": false
            }
          },
          "required": ["run"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "assert": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": ["panic", "halt", "page-fault", "out-of-gas", "ecalli"]
                },
                "regs": {
                  "type": "array",
                  "items": { "$ref": "#/$defs/u64" },
                  "minItems": 13,
                  "maxItems": 13
                },
                "pc": { "$ref": "#/$defs/u32" },
                "memory": {
                  "$ref": "#/$defs/memory-chunk"
                },
                "gas": {
                  "$ref": "#/$defs/i64"
                },
                "page-fault-address": {
                  "$ref": "#/$defs/u32"
                },
                "hostcall": {
                  "$ref": "#/$defs/u32"
                }
              },
              "required": [],
              "additionalProperties": false
            }
          },
          "required": ["assert"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "map": {
              "type": "object",
              "properties": {
                "address": { "$ref": "#/$defs/u32" },
                "length": { "$ref": "#/$defs/u32" },
                "is-writable": { "type": "boolean" }
              },
              "required": ["address", "length", "is-writable"],
              "additionalProperties": false
            }
          },
          "required": ["map"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "write": {
              "type": "object",
              "properties": {
                "address": { "$ref": "#/$defs/u32" },
                "contents": {
                  "type": "array",
                  "items": { "$ref": "#/$defs/u8" }
                }
              },
              "required": ["address", "contents"],
              "additionalProperties": false
            }
          },
          "required": ["write"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "set-reg": {
              "type": "object",
              "properties": {
                "reg": { "$ref": "#/$defs/reg" },
                "value": { "$ref": "#/$defs/u64" }
              },
              "required": ["reg", "value"],
              "additionalProperties": false
            }
          },
          "required": ["set-reg"],
          "additionalProperties": false
        }
      ]
    }
  }
}
